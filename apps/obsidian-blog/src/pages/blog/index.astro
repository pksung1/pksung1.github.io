---
import Layout from '../../layouts/Layout.astro';
import { getBlogPosts } from '../../content/blog/query';
import BlogPostCard from '../../components/BlogPostCard.astro';
import Pagination from '../../components/Pagination.astro';

// Pagination settings
const POSTS_PER_PAGE = 6;
const currentPage = 1;

// Get all blog posts sorted by publication date
const allPosts = await getBlogPosts();

// Calculate pagination
const totalPages = Math.ceil(allPosts.length / POSTS_PER_PAGE);
const paginatedPosts = allPosts.slice(0, POSTS_PER_PAGE);


---

<Layout title="Blog Posts" description="Browse all blog posts">
  <div class="max-w-4xl mx-auto">
    <header class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Blog Posts</h1>
      <p class="text-gray-600">Browse all articles and tutorials</p>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-1 gap-2 mb-12">
      {paginatedPosts.map((post) => (
        <BlogPostCard
          title={post.data.title}
          description={post.data.description}
          publishedDate={post.data.published_date}
          url={`/blog/${post.id}`}
          tags={post.data.tags}
        />
      ))}
    </div>

    {totalPages > 1 && (
      <Pagination currentPage={currentPage} totalPages={totalPages} baseUrl="/blog" />
    )}
  </div>
</Layout>
