---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import BlogPostCard from '../components/BlogPostCard.astro';

// Get all blog posts sorted by publication date
const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const latestPosts = sortedPosts.slice(0, 3); // Get the 3 most recent posts
---

<Layout title="MDX Blog - Home" description="A modern blog built with Astro and MDX">
  <section class="py-12">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Welcome to MDX Blog</h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        A modern blog built with Astro and MDX, featuring code highlighting and a clean design.
      </p>
    </div>
  </section>

  <section class="py-8">
    <div class="mb-8 flex justify-between items-center">
      <h2 class="text-2xl font-bold text-gray-900">Latest Posts</h2>
      <a href="/blog" class="text-blue-600 hover:text-blue-800 font-medium">
        View all posts â†’
      </a>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {latestPosts.map((post) => (
        <BlogPostCard
          title={post.data.title}
          description={post.data.description}
          pubDate={post.data.pubDate}
          url={`/blog/${post.slug}`}
          tags={post.data.tags}
        />
      ))}
    </div>
  </section>

  <section class="py-12 bg-gray-50 -mx-4 px-4 mt-12">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">About This Blog</h2>
      <p class="text-gray-600 mb-6">
        This blog is built with Astro and MDX, featuring a clean design and powerful features like code syntax highlighting, 
        responsive layout, and fast performance.
      </p>
      <div class="flex justify-center gap-4">
        <a href="/about" class="px-5 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">
          About Me
        </a>
        <a href="/portfolio" class="px-5 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300 transition-colors">
          Portfolio
        </a>
      </div>
    </div>
  </section>
</Layout>
