---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import BlogPostCard from '../../components/BlogPostCard.astro';
import Pagination from '../../components/Pagination.astro';

// Pagination settings
const POSTS_PER_PAGE = 6;
const currentPage = 1;

// Get all blog posts sorted by publication date
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Calculate pagination
const totalPosts = sortedPosts.length;
const totalPages = Math.ceil(totalPosts / POSTS_PER_PAGE);
const paginatedPosts = sortedPosts.slice(0, POSTS_PER_PAGE);
---

<Layout title="Blog Posts" description="Browse all blog posts">
  <div class="max-w-4xl mx-auto">
    <header class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Blog Posts</h1>
      <p class="text-gray-600">Browse all articles and tutorials</p>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
      {paginatedPosts.map((post) => (
        <BlogPostCard
          title={post.data.title}
          description={post.data.description}
          pubDate={post.data.pubDate}
          url={`/blog/${post.slug}`}
          tags={post.data.tags}
        />
      ))}
    </div>

    {totalPages > 1 && (
      <Pagination currentPage={currentPage} totalPages={totalPages} baseUrl="/blog" />
    )}
  </div>
</Layout>
